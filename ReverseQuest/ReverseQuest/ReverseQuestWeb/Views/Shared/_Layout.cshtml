<script>
    $("#clickme").click(function (e) {
        e.preventDefault();
        if ($("#book:first").is(":hidden")) {
            $("div").slideDown("slow");
        } else {
            $("#book").slideUp();
        }
        //$("#book").slideUp("slow", function () {
        //    // Animation complete.
